@model ProyectoLojackABM.Models.EquipoTipo

@{
    ViewBag.Title = "Create";
}

<h2>Equipo Tipo - Alta</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EquipoTipo</legend>

        <div class="editor-label">
            @Html.Label("Descripción")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descripcion)
            @Html.ValidationMessageFor(model => model.descripcion)
        </div>

        <div class="editor-label">
            @Html.Label("Cantidad de sensores")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cantSensores)
            @Html.ValidationMessageFor(model => model.cantSensores)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
