@model ProyectoLojackABM.Models.EquipoTipo

@{
    ViewBag.Title = "Edit";
}

<h2>Equipo Tipo - Modificación</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EquipoTipo</legend>
        <div class="editor-label">
            @Html.Label("ID")
            <input type="text" id="id" value="@Model.idEquipoTipo" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Descripción")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descripcion)
            @Html.ValidationMessageFor(model => model.descripcion)
        </div>

        <div class="editor-label">
            @Html.Label("Cantidad de sensores")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cantSensores)
            @Html.ValidationMessageFor(model => model.cantSensores)
        </div>

        <div class="editor-label">
            @Html.Label("Fecha Alta")
            <input type="text" id="id" value="@Model.fechaAlta" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("ID Usuario Alta")
            <input type="text" id="id" value="@Model.usuarioAlta" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Fecha Baja")
            <input type="text" id="id" value="@Model.fechaBaja" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("ID Usuario Baja")
            <input type="text" id="id" value="@Model.usuarioBaja" readonly />
        </div>

        <p>
            <input type="submit" value="Modificar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
