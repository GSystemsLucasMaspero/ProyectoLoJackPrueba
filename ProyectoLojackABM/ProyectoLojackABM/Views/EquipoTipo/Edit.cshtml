@model ProyectoLojackABM.Models.EquipoTipo

@{
    ViewBag.Title = "Edit";
}

<div class="content-wrapper">
    <h2>Equipo Tipo - Modificación</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>EquipoTipo</legend>
            <p></p>
            <table>
                <tr>
                    <td><text><font size="3"><b>ID: </b></font></text></td>
                    <td><text><font size="3">@Model.idEquipoTipo</font></text></td>
                </tr>
                <tr>
                    <td><text><font size="3"><b>Descripción: </b></font></text></td>
                    <td>
                        @Html.EditorFor(model => model.descripcion)
                        @Html.ValidationMessageFor(model => model.descripcion)
                    </td>
                </tr>
                <tr>
                    <td><text><font size="3"><b>Cantidad de sensores: </b></font></text></td>
                    <td>
                        @Html.EditorFor(model => model.cantSensores)
                        @Html.ValidationMessageFor(model => model.cantSensores)
                    </td>
                </tr>
                <tr>
                    <td><text><font size="3"><b>Fecha Alta: </b></font></text></td>
                    <td><text><font size="3">@Model.fechaAlta</font></text></td>
                </tr>
                <tr>
                    <td><text><font size="3"><b>Usuario Alta: </b></font></text></td>
                    <td><text><font size="3">@Model.usuarioAlta</font></text></td>
                </tr>
                <tr>
                    <td><text><font size="3"><b>Fecha Baja: </b></font></text></td>
                    <td>
                        <text>
                            <font size="3">
                                @if (Model.fechaBaja == null)
                                {
                                    @Html.DisplayName("-")
                                }
                                else
                                {
                                    @Model.fechaBaja
                                }
                            </font>
                        </text>
                    </td>
                </tr>
                <tr>
                    <td><text><font size="3"><b>Usuario Baja: </b></font></text></td>
                    <td>
                        <text>
                            <font size="3">
                                @if (Model.usuarioBaja == null)
                                {
                                    @Html.DisplayName("-")
                                }
                                else
                                {
                                    @Model.usuarioBaja
                                }
                            </font>
                        </text>
                    </td>
                </tr>
            </table>

            <p>
                <input type="submit" value="Modificar" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Volver a la lista", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
