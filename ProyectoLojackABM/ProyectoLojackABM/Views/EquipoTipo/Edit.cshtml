@model ProyectoLojackABM.Models.EquipoTipo

@{
    ViewBag.Title = "Edit";
}

<h2>Equipo Tipo - Modificación</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EquipoTipo</legend>
        <p></p>
        <div class="editor-label">
            @Html.Label("ID")
            <font size="3">@Html.DisplayFor(model => model.idEquipoTipo)</font>    
        </div>

        <div class="editor-label">
            @Html.Label("Descripción")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descripcion)
            @Html.ValidationMessageFor(model => model.descripcion)
        </div>

        <div class="editor-label">
            @Html.Label("Cantidad de sensores")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cantSensores)
            @Html.ValidationMessageFor(model => model.cantSensores)
        </div>

        <div class="editor-label">
            @Html.Label("Fecha Alta")
            <font size="3">@Html.DisplayFor(model => model.fechaAlta)</font>
        </div>

        <div class="editor-label">
            @Html.Label("ID Usuario Alta")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.usuarioAlta)
            @Html.ValidationMessageFor(model => model.usuarioAlta)
        </div>

        <div class="editor-label">
            @Html.Label("Fecha Baja")
            <font size="3">@Html.DisplayFor(model => model.fechaBaja)</font>
        </div>

        <div class="editor-label">
            @Html.Label("ID Usuario Baja")
            <font size="3">@Html.DisplayFor(model => model.usuarioBaja)</font>
        </div>

        <p>
            <input type="submit" value="Modificar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
