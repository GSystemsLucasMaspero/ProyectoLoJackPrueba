@model ProyectoLojackABM.Models.Entidad

@{
    ViewBag.Title = "Edit";
}

<h2>Entidad - Modificación</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Entidad</legend>
        <p></p>
        <div class="editor-label">
            @Html.Label("ID")
            <input type="text" id="id" value="@Model.idEntidad" readonly />
        </div>

        <div class="editor-label">
            @Html.Label(" Nombre")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombre)
            @Html.ValidationMessageFor(model => model.nombre)
        </div>

        <div class="editor-label">
            @Html.Label(" Estado")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.estado)
            @Html.ValidationMessageFor(model => model.estado)
        </div>

        <div class="editor-label">
            @Html.Label(" Nivel Servicio")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idNivelServicio", String.Empty)
            @Html.ValidationMessageFor(model => model.idNivelServicio)
        </div>

        <div class="editor-label">
            @Html.Label("Plantilla Suceso")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.plantillaSuceso)
            @Html.ValidationMessageFor(model => model.plantillaSuceso)
        </div>

        <div class="editor-label">
            @Html.Label("Cadencia Reporte")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cadenciaReporte)
            @Html.ValidationMessageFor(model => model.cadenciaReporte)
        </div>

        <div class="editor-label">
            @Html.Label("Fecha Alta")
            <input type="text" id="id" value="@Model.fechaAlta" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Usuario Alta")
            <input type="text" id="id" value="@Model.usuarioAlta" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Fecha de Modificación")
            <input type="text" id="id" value="@Model.fechaModificacion" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Usuario Modificación")
            <input type="text" id="id" value="@Model.usuarioModificacion" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Fecha Baja")
            <input type="text" id="id" value="@Model.fechaBaja" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Usuario Baja")
            <input type="text" id="id" value="@Model.usuarioBaja" readonly />
        </div>

        <div class="editor-label">
            @Html.Label("Comentario")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.comentario)
            @Html.ValidationMessageFor(model => model.comentario)
        </div>

        <div class="editor-label">
            @Html.Label("Teléfono")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.telefono)
            @Html.ValidationMessageFor(model => model.telefono)
        </div>

        <div class="editor-label">
            @Html.Label("ID Procedimiento")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idProcedimiento)
            @Html.ValidationMessageFor(model => model.idProcedimiento)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idCuenta, "Cuenta")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idCuenta", String.Empty)
            @Html.ValidationMessageFor(model => model.idCuenta)
        </div>

        <p>
            <input type="submit" value="Modificar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
